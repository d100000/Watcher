<UserControl x:Class="Watcher.UserControlerModel.DayRowSeries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Watcher.UserControlerModel"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="980"
             >
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Width="980" Height="300" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Name="DailyShow" >
            <Grid Width="500" Height="280">
                <wpf:PieChart  Height="260"  Name="DailyDataSeries" LegendLocation="Bottom"  Series="{Binding SeriesCollection}">

                </wpf:PieChart>
            </Grid>
            <Grid>
                <ListView>
                    
                </ListView>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
